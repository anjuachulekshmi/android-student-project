<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TextView android:text="@string/user_name"
    android:textColor="#F7FEFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
<EditText android:id="@+id/uname"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <TextView android:text="@string/password"
        android:textColor="#F9FDFD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/pass"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:text="LOGIN "
        android:id="@+id/loginbtn"
        android:layout_margin="5dp"
        android:background="@drawable/buttonstyle"
        android:textColor="#BDE1EA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_margin="5dp"
        android:text="GO TO REGISTER"
        android:id="@+id/registerbtn"
        android:background="@drawable/buttonstyle"
        android:textColor="#D8E8E6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
